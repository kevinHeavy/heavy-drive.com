{% extends "frontend/base.html.twig" %}
{% block body %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <div class="container-fluid">
        <div class="row">
            <div class="process">
                <div class="process-row nav nav-tabs">
                    <div class="process-step">
                        <button type="button" class="btn btn-info btn-circle" data-toggle="tab" href="#menu1"><i
                                    class="fa fa-info fa-3x"></i></button>
                        <p>
                            <small>{{ 'heavy.reservation.step_1' | trans }}</small>
                        </p>
                    </div>
                    <div class="process-step">
                        <button type="button" class="btn btn-default btn-circle" data-toggle="tab" href="#menu2"><i
                                    class="fa fa-user fa-3x"></i></button>
                        <p>
                            <small>{{ 'heavy.reservation.step_2' | trans }}</small>
                        </p>
                    </div>
                    <div class="process-step">
                        <button type="button" class="btn btn-default btn-circle" data-toggle="tab" href="#menu3"><i
                                    class="glyphicon glyphicon-plus"></i></button>
                        <p>
                            <small>{{ 'heavy.reservation.step_3' | trans }}</small>
                        </p>
                    </div>
                    <div class="process-step">
                        <button type="button" class="btn btn-default btn-circle" data-toggle="tab" href="#menu4"><i
                                    class="fa fa-check fa-3x"></i></button>
                        <p>
                            <small>{{ 'heavy.reservation.step_4' | trans }}</small>
                        </p>
                    </div>
                </div><!--process-row nav nav-tabs close-->
            </div><!--process close-->
        </div><!--row close-->
        <div class="tab-content">
            <div id="menu1" class="tab-pane fade active in">
                <div class="container-fluid">
                    <div class="well text-center">
                        <h3>{{ 'heavy.reservation.rent_date' | trans }}</h3>
                        <br>
                        <label for="from">{{ 'heavy.reservation.from_date' | trans }}</label>
                        <input type="text" id="from" name="from">
                        <label for="to">{{ 'heavy.reservation.to_date' | trans }}</label>
                        <input type="text" id="to" name="to">
                    </div><!--well text-center-->
                </div><!--container-fluid close-->
                <ul class="list-unstyled list-inline pull-right">
                    <li>
                        <button type="button"
                                class="btn btn-info next-step">{{ 'heavy.reservation.button_next' | trans }}<i
                                    class="fa fa-chevron-right"></i></button>
                    </li>
                </ul>
            </div><!--menu1 tab-pane fade active in close-->
            <div id="menu2" class="tab-pane fade">
                <div class="container-fluid">
                    <div class="row col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">{{ 'heavy.reservation.guest_info' | trans }}</div>
                            <div class="panel-body">
                                <form role="form" method="post" action="" accept-charset="UTF-8">
                                    <label for="lname">{{ 'heavy.register.lastname' | trans }}</label>
                                    <input type="text" id="lname" class="form-control" name="lname" placeholder="">
                                    <label for="fname">{{ 'heavy.register.firstname' | trans }}</label>
                                    <input type="text" id="fname" class="form-control" name="fname" placeholder="">
                                    <label for="gender" class="m-t-10">{{ 'heavy.register.gender' | trans }}</label>
                                    <select id="gender" class="form-control" name="gender">
                                        <option value="unknown">Unknown</option>
                                        <option value="alabama">{{ 'heavy.register.female' | trans }}</option>
                                        <option value="alaska">{{ 'heavy.register.male' | trans }}</option>
                                    </select>
                                    <label for="states" class="m-t-10">{{ 'heavy.register.city' | trans }}</label>
                                    <select id="states" class="form-control" name="state">
                                        <option value="unknown">Unknown</option>
                                    </select>
                                    <label for="emailaddr" class="m-t-10">{{ 'heavy.register.mail' | trans }}</label>
                                    <input type="text" id="emailaddr" class="form-control" name="email"
                                           placeholder="{{ 'heavy.register.mailexample' | trans }}">
                                    <label for="licenceNumber">{{ 'heavy.reservation.licence_driver' | trans }}</label>
                                    <input type="tel" pattern="[0-9]{12}" id="licenceNumber" class="form-control"
                                           name="licenceNumber" placeholder="">
                                    <br/>
                                    <center>
                                        <button type="button"
                                                class="btn btn-info next-step">{{ 'heavy.reservation.button_next' | trans }}
                                            <i class="fa fa-chevron-right"></i></button>
                                    </center>
                                </form>
                            </div><!--panel-body close-->
                        </div><!--panel-heading close-->
                    </div><!--panel panel-primary-->
                    <div class="col-md-6 line">
                        <div class="panel panel-primary">
                            <div class="panel-heading">{{ 'heavy.reservation.account' | trans }}</div>
                            <div class="panel-body">
                                <div class="container">
                                    <div class="omb_login">
                                        <h3 class="omb_authTitle">{{ 'heavy.reservation.login_or' | trans }}<a
                                                    href="#">{{ 'heavy.reservation.signup' | trans }}</a></h3>
                                        <div class="row omb_row-sm-offset-3 omb_socialButtons">
                                            <div class="col-xs-4 col-sm-2">
                                                <a href="#" class="btn btn-lg btn-block omb_btn-facebook">
                                                    <i class="fa fa-facebook visible-xs"></i>
                                                    <span class="hidden-xs">{{ 'heavy.reservation.facebook' | trans }}</span>
                                                </a>
                                            </div>
                                            <div class="col-xs-offset-2 col-sm-2">
                                                <a href="#" class="btn btn-lg btn-block omb_btn-google">
                                                    <i class="fa fa-google-plus visible-xs"></i>
                                                    <span class="hidden-xs">{{ 'heavy.reservation.google' | trans }}</span>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="row omb_row-sm-offset-3 omb_loginOr">
                                            <div class="col-xs-12 col-sm-6">
                                                <hr class="omb_hrOr">
                                                <span class="omb_spanOr">{{ 'heavy.reservation.or' | trans }}</span>
                                            </div>
                                        </div>
                                    </div><!--omb_login-->
                                    <div class="row omb_row-sm-offset-3">
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <form class="omb_loginForm" action="" autocomplete="off" method="POST">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                    <input type="text" class="form-control" name="username"
                                                           placeholder="email address">
                                                </div>
                                                <br/>
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                                    <input type="password" class="form-control" name="password"
                                                           placeholder="Password">
                                                </div>
                                                <span class="help-block">{{ 'heavy.reservation.password_error' | trans }}</span>
                                                <button class="btn btn-lg btn-primary btn-block"
                                                        type="submit">{{ 'heavy.reservation.login' | trans }}</button>
                                                <br/>
                                            </form>
                                        </div><!--col-xs-12 col-sm-6 col-md-6 close-->
                                    </div>
                                    <div class="row omb_row-sm-offset-3">
                                        <div class="col-xs-12 col-sm-3">
                                            <label class="checkbox">
                                                <input type="checkbox"
                                                       value="remember-me">{{ 'heavy.reservation.remember_me' | trans }}
                                            </label>
                                        </div>
                                        <div class="col-xs-12 col-sm-3">
                                            <p class="omb_forgotPwd">
                                                <a href="#">{{ 'heavy.register.forgotpassword' | trans }}</a>
                                            </p>
                                        </div>
                                    </div><!--row omb_row-sm-offset-3 close-->
                                </div><!--container close-->
                            </div><!--panel-body close-->
                        </div><!--panel panel-primary close-->
                    </div><!--col-md-6 line close-->
                </div><!--container-fluid-->
                <ul class="list-unstyled list-inline pull-right">
                    <li>
                        <button type="button" class="btn btn-default prev-step"><i
                                    class="fa fa-chevron-left"></i>{{ 'heavy.reservation.button_previous' | trans }}
                        </button>
                    </li>
                    <li>
                        <button type="button"
                                class="btn btn-info next-step">{{ 'heavy.reservation.button_next' | trans }}<i
                                    class="fa fa-chevron-right"></i></button>
                    </li>
                </ul>
            </div><!--menu2 tab-pane fade active in close-->
            <div id="menu3" class="tab-pane fade">
                <div class="col-md-12 well text-center">
                    <div class="control-group" id="fields">
                        <label class="control-label" for="field1">
                            {{ 'heavy.reservation.proof_paper' | trans }}
                        </label>
                        <div class="controls">
                            <div class="entry input-group col-xs-3">
                                <input class="btn btn-primary" name="fields[]" type="file">
                                <span class="input-group-btn">
                                <button class="btn btn-success btn-add" type="button">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                            </div>
                        </div><!--controls close-->
                    </div><!--control-group close-->
                </div><!--col-md-12 well text-center-->

                <ul class="list-unstyled list-inline pull-right">
                    <li>
                        <button type="button" class="btn btn-default prev-step"><i
                                    class="fa fa-chevron-left"></i>{{ 'heavy.reservation.button_previous' | trans }}
                        </button>
                    </li>
                    <li>
                        <button type="button"
                                class="btn btn-info next-step">{{ 'heavy.reservation.button_next' | trans }}<i
                                    class="fa fa-chevron-right"></i></button>
                    </li>
                </ul>
            </div><!--menu3 tab-pane fade active in close-->
            <div id="menu4" class="tab-pane fade">
                <h3>Template Validé</h3>

                <ul class="list-unstyled list-inline pull-right">
                    <li>
                        <button type="button" class="btn btn-default prev-step"><i
                                    class="fa fa-chevron-left"></i>{{ 'heavy.reservation.button_previous' | trans }}
                        </button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-success"><i
                                    class="fa fa-check"></i>{{ 'heavy.reservation.button_done' | trans }}</button>
                    </li>
                </ul>
            </div><!--menu4 tab-pane fade active in close-->
        </div>
    </div>
    <script>
        $(function () {
            $('.btn-circle').on('click', function () {
                $('.btn-circle.btn-info').removeClass('btn-info').addClass('btn-default');
                $(this).addClass('btn-info').removeClass('btn-default').blur();
            });

            $('.next-step, .prev-step').on('click', function (e) {
                var $activeTab = $('.tab-pane.active');

                $('.btn-circle.btn-info').removeClass('btn-info').addClass('btn-default');

                if ($(e.target).hasClass('next-step')) {
                    var nextTab = $activeTab.next('.tab-pane').attr('id');
                    $('[href="#' + nextTab + '"]').addClass('btn-info').removeClass('btn-default');
                    $('[href="#' + nextTab + '"]').tab('show');
                }
                else {
                    var prevTab = $activeTab.prev('.tab-pane').attr('id');
                    $('[href="#' + prevTab + '"]').addClass('btn-info').removeClass('btn-default');
                    $('[href="#' + prevTab + '"]').tab('show');
                }
            });
        });
        $(function () {
            var dateFormat = "mm/dd/yy",
                from = $("#from")
                    .datepicker({
                        defaultDate: "+1w",
                        changeMonth: true,
                        numberOfMonths: 2
                    })
                    .on("change", function () {
                        to.datepicker("option", "minDate", getDate(this));
                    }),
                to = $("#to").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 2
                })
                    .on("change", function () {
                        from.datepicker("option", "maxDate", getDate(this));
                    });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;
            }
        });
        $(function () {
            $(document).on('click', '.btn-add', function (e) {
                e.preventDefault();

                var controlForm = $('.controls:first'),
                    currentEntry = $(this).parents('.entry:first'),
                    newEntry = $(currentEntry.clone()).appendTo(controlForm);

                newEntry.find('input').val('');
                controlForm.find('.entry:not(:last) .btn-add')
                    .removeClass('btn-add').addClass('btn-remove')
                    .removeClass('btn-success').addClass('btn-danger')
                    .html('<span class="glyphicon glyphicon-minus"></span>');
            }).on('click', '.btn-remove', function (e) {
                $(this).parents('.entry:first').remove();

                e.preventDefault();
                return false;
            });
        });
    </script>
{% endblock %}