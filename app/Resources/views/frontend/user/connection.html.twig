{% extends "frontend/base.html.twig" %}
{% block body %}
<div class="container">
    <div class="row">
        <h2 class="centered">Identifiez-vous</h2>
        <hr class="star-light">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary panel-login">
                <div class="panel-heading">{{ 'heavy.connection.description' | trans }}</div>
                <div class="panel-body">
                    <form role="form" method="post" action="" accept-charset="UTF-8">
                        <label for="emailaddr" class="m-t-10">{{ 'heavy.connection.mail' | trans }}</label>
                        <input type="text" id="emailaddr" class="form-control" name="email" placeholder="">

                        <label for="password" class="m-t-10">{{ 'heavy.connection.password' | trans }}</label>
                        <input type="password" id="password" class="form-control" name="password" placeholder="">
                        <br>
                        <center><input type="submit" class="btn btn-primary m-t-10" id="submitbtn" name="submit" value="{{ 'heavy.connection.connection' | trans }}"></center>
                        <br>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="text-center">
                                        <a href="#" tabindex="5" class="forgot-password">{{ 'heavy.connection.forgotpassword' | trans }}</a>
                                    </div>
                                    <div class="text-right">
                                        <a href="{{ path('Registration') }}" tabindex="5" class="signup">{{ 'heavy.connection.register' | trans }}</a>
                                    </div>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}