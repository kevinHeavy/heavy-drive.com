{% extends 'frontend/base.html.twig' %}
{% block body %}
    <div class="container contain_home">
        <div class="row row-video">
            <div class="embed-responsive embed-responsive-16by9">
                <div class="homepage__main-container centered">
                    <h3 >{{ 'heavy.website.slogan'|trans }}</h3>
                </div>
                <video class="video_play" autoplay loop>
                    <source class="embed-responsive-item" src="{{ asset('video/Video_de_heavy_cut.mp4') }}">
                </video>
            </div>
        </div>
    </div>
    <section id="about_us">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>About us</h2>
