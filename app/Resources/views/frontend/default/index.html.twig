                    {{ 'heavy.homepage.about_us.title'|trans|raw }}
                    <br>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 ">
                    {{ 'heavy.homepage.about_us.about_us_left'|trans|raw }}
                </div>
                <div class="col-lg-4">
                    {{ 'heavy.homepage.about_us.about_us_center'|trans|raw }}
                </div>
                <div class="col-lg-4">
                    {{ 'heavy.homepage.about_us.about_us_right'|trans|raw }}
                </div>
            </div>
        </div>
    </section>
    <section id="expertise">
        <div class="container-fluid text-center">
            <h2>{{ 'heavy.homepage.our_expertise'| trans }}</h2>
            <hr class="star-light">
            <br>
            <div class="row slideanim">
